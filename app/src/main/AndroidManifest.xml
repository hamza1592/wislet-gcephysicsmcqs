<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wislet.gcephysicsmcqs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_books"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ApplicationModeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="wislet.gcephysicsmcqs.ApplicationModeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="wislet.gcephysicsmcqs.HomeActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TopicalCategories">
            <intent-filter>
                <action android:name="wislet.gcephysicsmcqs.TopicalCategories" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionAnswer"
            android:label="@string/title_activity_question_answer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="wislet.gcephysicsmcqs.QuestionAnswer" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionAnswerTestMode"
            android:label="@string/title_activity_question_answer_yearly"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="wislet.gcephysicsmcqs.QuestionAnswerTestMode" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".YearlyCategories">
            <intent-filter>
                <action android:name="wislet.gcephysicsmcqs.YearlyCategories" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".QuestionListActivity">
            <intent-filter>
                <action android:name="wislet.gcephysicsmcqs.QuestionListActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TestReportActivity">
            <intent-filter>
                <action android:name="wislet.gcephysicsmcqs.TestReportActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
